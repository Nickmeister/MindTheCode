@model Timesheet.Models.ViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentHeadId" class="control-label">Department Head</label>
                @*<input asp-for="DepartmentHeadId" class="form-control" />*@
                <div>
                    @Html.DropDownListFor(m => m.DepartmentHeadId, ViewBag.Users as IEnumerable<SelectListItem>, "Select a manager")
                </div>
                <span asp-validation-for="DepartmentHeadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

